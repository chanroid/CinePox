<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="5dp" >

        <TextView
            android:id="@+id/btn_moviedetail_serise_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/bt_moviedetail_order"
            android:padding="5dp"
            android:text="@string/moviedetail_order_all"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/btn_moviedetail_serise_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_moviedetail_order"
            android:padding="5dp"
            android:text="@string/moviedetail_order_desc"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_small" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_moviedetail_serises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#a7a7a7"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/btn_moviedetail_pager_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/bt_moviedetail_serisebefore" />

        <ImageButton
            android:id="@+id/btn_moviedetail_pager_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/bt_moviedetail_serise_next" />

        <TextView
            android:id="@+id/text_moviedetail_pager_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="1 / 6"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_medium" />
    </RelativeLayout>

</LinearLayout>