<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/img_movielistitem_postimage"
            android:layout_width="70dp"
            android:layout_height="98dp"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="@drawable/bg_poster"
            android:padding="1dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_movielistitem_postimage_frame"
            android:layout_width="70dp"
            android:layout_height="98dp"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="@drawable/bg_poster_bg"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/img_movielistitem_is3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img_movielistitem_postimage"
            android:src="@drawable/icon_3d"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_islive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img_movielistitem_postimage"
            android:src="@drawable/icon_live"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_isnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img_movielistitem_postimage"
            android:src="@drawable/icon_new"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_iscinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img_movielistitem_postimage"
            android:src="@drawable/icon_same"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_iskome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_movielistitem_postimage"
            android:layout_alignRight="@+id/img_movielistitem_postimage"
            android:layout_margin="11dp"
            android:src="@drawable/icon_come"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_ishd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_movielistitem_postimage"
            android:layout_alignParentLeft="true"
            android:layout_margin="11dp"
            android:src="@drawable/icon_hd"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_isdubbing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_movielistitem_postimage"
            android:layout_alignParentLeft="true"
            android:layout_margin="11dp"
            android:src="@drawable/icon_dubbing"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_movielistitem_isonline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_movielistitem_postimage"
            android:layout_centerHorizontal="true"
            android:layout_margin="9dp"
            android:src="@drawable/icon_online"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_movielistitem_viewclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_ageall" />

            <TextView
                android:id="@+id/text_movielistitem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="클로이 Chloe (2009)"
                android:textColor="#000000"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--
            <TableRow
                android:layout_width="wrap_content"
