                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주연: "
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_movielistitem_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small" />
            </TableRow>
            -->

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <!--
                     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장르: "
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold" />
                -->

                <TextView
                    android:id="@+id/text_movielistitem_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small" />
            </TableRow>

            <!--
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp" >

                     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격: "
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold" />

            </TableRow>
            -->

            <TableRow
                android:id="@+id/table_movielistitem_deliberation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="심의번호: "
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small" />

                <TextView
                    android:id="@+id/text_movielistitem_deliberation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/text_movielistitem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_movielistitem_ismonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_free" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/layout_movielistitem_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/img_movielistitem_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_snspoint_0" />

                <ImageView
                    android:id="@+id/img_movielistitem_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_snspoint_0" />

                <ImageView
                    android:id="@+id/img_movielistitem_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_snspoint_0" />

                <ImageView
                    android:id="@+id/img_movielistitem_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_snspoint_0" />

                <ImageView
                    android:id="@+id/img_movielistitem_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_snspoint_0" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_movielistitem_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0.0"
                android:textColor="#000000"
                android:textSize="@dimen/textsize_small" />
        </LinearLayout>
    </LinearLayout>

    <CheckedTextView
        android:id="@+id/btn_movielistitem_zzim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/bt_zzim"
        android:focusable="false" />

</LinearLayout>