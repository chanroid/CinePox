<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MainActivity" >

    <!--
         <LinearLayout
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top" />
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_miantit"
        android:paddingRight="3dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_maintit" />

        <ImageButton
            android:id="@+id/btn_main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/btn_main_search" />

        <ImageButton
            android:id="@+id/btn_main_premium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitStart"
            android:src="@drawable/btn_main_premium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mainmenu"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <ImageButton
            android:id="@+id/btn_main_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/bt_main_best_on" />

        <ImageButton
            android:id="@+id/btn_main_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_main_movie" />

        <ImageButton
            android:id="@+id/btn_main_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_main_video" />

        <ImageButton
            android:id="@+id/btn_main_mylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_main_mylist" />

        <ImageButton
            android:id="@+id/btn_main_qrplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_main_qrplay" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#14161c" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#4f5464" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a2d36"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <LinearLayout
            android:id="@+id/layout_best_btncontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_best_gridcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.handmark.pulltorefresh.library.PullToRefreshGridView
                android:id="@+id/grid_main_best"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:verticalSpacing="20dp" >
            </com.handmark.pulltorefresh.library.PullToRefreshGridView>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>